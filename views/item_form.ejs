<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>
	<body>
		<main class="main">
			<%- include('./partials/menu') %>
			<div class="content">
				<h1><%= title %></h1>
				<form action="" method="post">
					<div>
						<label for="item_name">Item name</label>
						<input
							type="text"
							id="item_name"
							name="item_name"
							value="<%= typeof item != 'undefined' ? item.name : '' %>"
						/>
					</div>
					<div>
						<label for="item_price">Item price</label>
						<input
							type="number"
							id="item_price"
							name="item_price"
							value="<%= typeof item != 'undefined' ? item.price : '' %>"
						/>
					</div>
					<div>
						<label for="item_quantity">Item quantity</label>
						<input
							type="number"
							id="item_quantity"
							name="item_quantity"
							value="<%= typeof item != 'undefined' ? item.quantity : '' %>"
						/>
					</div>
					<div>
						<label for="category">Choose category:</label>
						<select id="category" name="category">
							<% categories.forEach(category => { %>
							<option value="<%= category._id %>" <%= category._id.toString() ===
								item.category[0]._id.toString() ? 'selected' : "" %>><%= category.name %></option>
							<% }) %>
						</select>
					</div>
					<div>
						<label for="producer">Choose a producer:</label>
						<select id="producer" name="producer">
							<% producers.forEach(producer => { %>
							<option value="<%= producer._id %>" <%= producer._id.toString() ===
								item.producer._id.toString() ? 'selected' : "" %>><%= producer.name %></option>
							<% }) %>
						</select>
					</div>
					<div>
						<label for="description">Descripiton</label>
						<textarea name="description" id="description" cols="30" rows="10"></textarea>
					</div>
					<button type="submit">Add</button>
				</form>
			</div>
		</main>
	</body>
</html>
